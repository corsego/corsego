.card.shadow
  .card-header
    %i.fa.fa-graduation-cap
    = link_to course.title, course_path(course)
  - if course.avatar.attached?
    .card-img-top
      = link_to course_path(course) do
        = image_tag course.avatar, loading: "lazy", height: "auto", width: "100%"
  .card-footer
    %small= simple_format(course.marketing_description)
  .card-footer
    .text-center
      = enrollment_button(course)
      = review_button(course)
      = certificate_button(course)

  .card-footer
    .row
      .col-md-6
        %i.text-warning.fa.fa-star
        %b= course.average_rating
        (
        %i.fa.fa-user-graduate
        = course.enrollments_count
        )
        %i.fa.fa-tasks
        = course.lessons_count
      .col-md-6
        .text-end
          - if course.user
            - if course.user.image?
              = image_tag course.user.image, size: '20x20', alt: "#{course.user.email}", class: 'rounded-circle'
            = link_to course.user.username, user_path(course.user)
  - if current_user
    - if policy(course).owner?
      .card-footer
        .text-center
          .btn-group
            = link_to new_course_chapter_path(course, @chapter), class: 'btn btn-sm btn-primary' do
              %i.fa.fa-plus
              Chapter
            = link_to new_course_lesson_path(course, @lesson), class: 'btn btn-sm btn-primary' do
              %i.fa.fa-plus
              Lesson
            = link_to course_course_wizard_index_path(course), class: 'btn btn-sm btn-warning' do
              %i.fa.fa-edit
              Editor
    - if policy(course).admin_or_owner?
      .card-footer
        .btn-group
          = link_to analytics_course_path(course), class: 'btn btn-sm btn-info' do
            %i.fa.fa-chart-bar
            Analytics
          = link_to new_course_access_grant_path(course), class: 'btn btn-sm btn-success' do
            %i.fa.fa-user-plus
            Grant Access
      .card-footer
        .form-check.form-switch
          - if course.published?
            %input#customSwitch1.form-check-input{:disabled => "disabled", :checked => "checked", :type => "checkbox"}/
          - else
            %input#customSwitch2.form-check-input{:disabled => "disabled", :type => "checkbox"}/
          %label.form-check-label{:for => "Published"} Teacher Published
        - if policy(course).approve?
          .form-check.form-switch
            = link_to approve_course_path(course), data: { turbo_method: :patch } do
              - if course.approved?
                %input#customSwitch1.form-check-input{:type => "checkbox", :checked => "checked"}/
              - else
                %input#customSwitch1.form-check-input{:type => "checkbox"}/
              %label.form-check-label{:for => "customSwitch1"} Admin Approved
        - else
          .form-check.form-switch
            - if course.approved?
              %input#customSwitch1.form-check-input{:disabled => "disabled", :checked => "checked", :type => "checkbox"}/
            - else
              %input#customSwitch2.form-check-input{:disabled => "disabled", :type => "checkbox"}/
            %label.form-check-label{:for => "Published"} Admin Approved
      - if policy(course).destroy?
        .card-footer
          = link_to course, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' do
            %i.fa.fa-trash
            Delete
  - if course.tags.any?
    .card-footer
      - course.tags.each do |tag|
        .badge.text-bg-info
          = tag.name
